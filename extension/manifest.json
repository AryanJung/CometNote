{
  "manifest_version": 3,
  "name": "Comet StudySnip",
  "version": "1.0",
  "permissions": ["storage", "contextMenus", "scripting", "tabs", "activeTab"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["highlight.js"],
      "run_at": "document_idle"
    }
  ]
}
